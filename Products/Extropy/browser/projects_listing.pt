<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      i18n:domain="extropy"
      metal:use-macro="here/main_template/macros/master">
  <head>
  </head>
<body>

<div metal:fill-slot="content-core"
     tal:define="etool nocall:here/extropy_tracking_tool;">

<div tal:define="projectsbystate view/projects;
                 contracts view/contracts;
                 ztu modules/ZTUtils;">

    <div tal:repeat="state projectsbystate">

        <h2 tal:content="state/title">Title</h2>

        <div class="tileItem visualIEFloatFix" tal:repeat="phase state/projects">
            <h3 class="tileHeadline" tal:define="customer_title phase/customer_title|nothing">
                <a class="summary" tal:attributes="href phase/url">
                    <span tal:replace="phase/title" />
                </a>
                <span class="discreet">
                    <tal:customer tal:condition="customer_title">
                        /
                        <span tal:replace="customer_title" />
                    </tal:customer>
                    [<span tal:replace="phase/project_manager" />]
                </span>
            </h3>
            <div class="tileBody">
                <span class="description">
                    <span tal:condition="phase/status|nothing"><tal:status content="phase/status">[status]</tal:status><br /></span>
                    <tal:block tal:condition="phase/hours|nothing"><a tal:content="phase/hours" tal:attributes="title python:'%s - %s' % (phase['start'], phase['end']); href python:'%s/worklog?%s' % (phase['url'], ztu.make_query(period='week', person='all', group_by='person', start=phase['start']))">hours</a>h, <span tal:content="phase/persons">persons</span></tal:block>
                    <tal:block tal:condition="not:phase/hours|nothing">No hours spent last week</tal:block>
                </span>
            </div>
        </div>

    </div>

</div>

</div>

</body>
</html>
