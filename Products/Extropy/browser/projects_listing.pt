<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      i18n:domain="extropy"
      metal:use-macro="here/main_template/macros/master">
  <head>
  </head>
<body>

<div metal:fill-slot="main"
     tal:define="etool nocall:here/extropy_tracking_tool;">

<div tal:define="projectsbystate view/projects">

    <div tal:repeat="state projectsbystate">

        <h3 tal:content="state/title">Title</h3>

        <dl tal:repeat="phase state/projects">
            <dt>
                    <a tal:attributes="href phase/url"><span tal:content="phase/title" /></a> [<span tal:replace="phase/project_manager" />]
            </dt>
            <dd>
                    <span tal:content="phase/status">[status]</span><br />
                    <tal:block tal:condition="phase/hours"><a tal:content="phase/hours" tal:attributes="title python:'%s - %s' % (phase['start'], phase['end']); href python:'%s/worklog?%s' % (phase['url'], ztu.make_query(period='week', person='all', group_by='person', start=phase['start']))">hours</a>h, <span tal:content="phase/persons">persons</span></tal:block>
                    <tal:block tal:condition="not:phase/hours">No hours spent last week</tal:block>
            </dd>

        </dl>

    </div>
</div>

</div>

</body>
</html>
