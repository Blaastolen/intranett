/* states */

.state-completed,
.state-closed {
    color: green !important;
    text-decoration: line-through !important;
}

.state-unassigned {
    color: red !important;
}


.state-discarded {
    color: grey !important;
    text-decoration: line-through !important;

}

.state-in-progress,
.state-assigned,
.state-open {
    color : &dtml-linkColor; !important;
}

.state-prospective {
    color: orange !important;
}

.state-invoiced a {
    text-decoration: line-through !important;
}

/* priorities */

.priority-5 {
        color: black;  /*normal*/
}
.priority-1 {
        color: green;   /*nice-to-have*/
}
.priority-10 {
        color: red;    /*critical*/
}
.overdue{
        color: red !important;
}

/* Workflow actions view */
.workflowactions {
    text-transform: lowercase;
}

.workflowactions.loading {
    background-image: url(&dtml-portal_url;/progress.gif);
    background-repeat: no-repeat;
    background-position: 100%;
    padding-right: 14px;
    padding-bottom: 0.5ex;
}
