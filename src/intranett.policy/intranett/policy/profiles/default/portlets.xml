<?xml version="1.0"?>
<portlets>

 <portlet
   addview="intranett.policy.portlets.NewsHighlight"
   title="News Highlight"
   description="Displays a news item among the latest ones."
   />

 <portlet
   addview="intranett.policy.portlets.EventHighlight"
   title="Event Highlight"
   description="Displays an upcoming event."
   />

 <portlet
   addview="intranett.policy.portlets.ContentHighlight"
   title="Content Highlight"
   description="Displays a selected content item."
   />

 <portlet
   addview="intranett.policy.portlets.WorkspaceInfo"
   title="Workspace Information"
   description="Displays details for the current workspace."
   />

  <assignment name="navigation"
      category="context"
      key="/"
      manager="plone.leftcolumn"
      type="portlets.Navigation"
      visible="True">
      <property name="topLevel">1</property>
      <property name="currentFolderOnly">True</property>
      <property name="name"></property>
      <property name="includeTop">True</property>
      <property name="bottomLevel">1</property>
      <property name="root"></property>
  </assignment>

</portlets>
