<dl class="portlet portletSingleItem"
    tal:condition="view/available"
    i18n:domain="intranett">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="">Workspace Info</span>
        <span class="portletTopRight"></span>
    </dt>
    <dd class="portletItem odd">

      <span class="portletItemDetails"
            tal:condition="python:view.state=='published'"
            i18n:translate="">
          All intranet users can see this workspace. Only workspace members
          can edit content.
      </span>
      <span class="portletItemDetails"
            tal:condition="python:view.state=='private'"
            i18n:translate="">
          Only workspace members can see or edit content.
      </span>

    <span i18n:translate="members_are">Members are:</span>
    <ul>
      <li tal:repeat="member python:view.members" tal:content="member" />
    </ul>

    </dd>
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
