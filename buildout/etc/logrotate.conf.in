# This file is generated from etc/logrotate.conf.in
# Please do not edit the copy etc/logrotate.conf

rotate 4
weekly
create
compress
delaycompress

${buildout:directory}/var/log/instance*log{
    sharedscripts
    postrotate
       test ! -f ${buildout:directory}/var/instance.pid || kill -USR2 `cat ${buildout:directory}/var/instance.pid`
    endscript
}

${buildout:directory}/var/log/varnish*log{
    sharedscripts
    postrotate
       test ! -f ${buildout:directory}/parts/varnish/varnish.pid || kill -HUP `cat ${buildout:directory}/parts/varnish/varnish.pid`
    endscript
}
