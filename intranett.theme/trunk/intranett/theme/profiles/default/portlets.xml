<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
    
    <!-- Columns (portlet managers) -->

    <portletmanager 
      name="frontpage.highlight" 
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager 
      name="frontpage.portlets.left" 
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager 
      name="frontpage.portlets.right" 
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager 
      name="frontpage.bottom" 
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />                      

    <assignment name="highlight"
        category="context"
        key="/"
        manager="frontpage.highlight"
        type="plone.portlet.static.Static"
        visible="True">
        <property name="text">"<p>Test frontpage highlight text</p>"</property>
    </assignment>
    
    <assignment name="bottom"
        category="context"
        key="/"
        manager="frontpage.bottom"
        type="plone.portlet.static.Static"
        visible="True">
        <property name="text">"<p>Test frontpage bottom text</p>"</property>
    </assignment>
    
    <assignment name="news"
        category="context"
        key="/"
        manager="frontpage.portlets.left"
        type="portlets.News"
        visible="True">
    </assignment>        
    
    <assignment name="events"
        category="context"
        key="/"
        manager="frontpage.portlets.right"
        type="portlets.Events"
        visible="True">
    </assignment>    

    <assignment name="navigation"
        category="context"
        key="/"
        manager="plone.leftcolumn"
        type="portlets.Navigation"
        visible="True">
        <property name="topLevel">1</property>
        <property name="currentFolderOnly">True</property>
        <property name="name"></property>
        <property name="includeTop">True</property>
        <property name="bottomLevel">1</property>
        <property name="root"></property>
    </assignment>

</portlets>
