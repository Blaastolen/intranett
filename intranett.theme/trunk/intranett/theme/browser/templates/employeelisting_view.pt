<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

    <metal:content fill-slot="content">
        <span tal:content="view/employees"/>
        <div id="settings-toggle">
            We are going to have view switcher here.
        </div>
        <tal:employees repeat="employee view/employees">
        <div class="tileItem visualIEFloatFix row">
            <div class="cell width-3 position-0">
                <a href="#" 
                   tal:attributes="href string:$portal_url/author/${employee/username};
                                   title employee/fullname">
                    <img width="100" class="image-left" alt="" 
                         tal:attributes="src string:$portal_url/portal_memberdata/thumbnails/${employee/username}"
                         src="http://localhost:8080/Plone/portal_memberdata/thumbnails/admin">
                </a> 
            </div>
            <div class="cell width-13 position-3">
                <h2 class="tileHeadline">
                    <span class="summary">
                        <a class="contenttype-document state-private url" 
                           tal:content="employee/fullname | employee/username"
                           tal:attributes="href string:$portal_url/author/${employee/username};
                                           title employee/fullname">Test Page</a>
                    </span>
                </h2>
                <p class="tileBody ">
                    <span tal:content="employee/position" />, <span tal:content="employee/department" />
                </p>
            </div>
        </div>
        </tal:employees>
    </metal:content>

</body>
</html>

