<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"> 
            All customers
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />


        <p class="documentDescription">
            List of all customers
        </p>
        
        <div tal:replace="structure provider:plone.abovecontentbody" />

        
        <ul tal:define="customers python:context.restrictedTraverse('@@searchResults')(Type='Customer')">
            <li tal:repeat="customer customers"><a href="" tal:attributes="href customer/getURL"><img tal:define="logo customer/getRawLogo" tal:attributes="src string:${customer/getURL}/logo; title customer/Title;alt customer/Title" /></a> 
                </li>
        </ul>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

