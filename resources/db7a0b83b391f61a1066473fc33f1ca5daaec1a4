function hideAllMenus(a){var b=jQuery("dl.actionMenu.activated").length>0;if(b){jQuery("dl.actionMenu.activated").find("dd.actionMenuContent").slideUp(a,function(){jQuery(this).parents(".actionMenu:first").toggleClass("activated").toggleClass("deactivated")})}else{jQuery("dl.actionMenu").removeClass("activated").addClass("deactivated")}}function toggleMenuHandler(b){var c,a;if(jQuery("dl.actionMenu.activated").length>0){hideAllMenus(0)}c=jQuery(b.target).parents(".actionMenu:first")[0];a=jQuery(c).find("dd.actionMenuContent")[0];jQuery(a).slideDown("fast",function(){jQuery(this).parents(".actionMenu:first").removeClass("deactivated").addClass("activated")});return false}function actionMenuDocumentMouseDown(a){if(jQuery(a.target).parents(".actionMenu:first").length){return true}hideAllMenus("fast")}function actionMenuMouseOver(b){var d,c,a;d=jQuery("dl.actionMenu.activated").length>0;if(d){hideAllMenus(0);c=jQuery(b.target).parents(".actionMenu:first")[0];a=jQuery(c).find("dd.actionMenuContent")[0];jQuery(a).slideDown(0,function(){jQuery(this).parents(".actionMenu:first").removeClass("deactivated").addClass("activated")})}return false}function initializeMenus(){jQuery(document).mousedown(actionMenuDocumentMouseDown);hideAllMenus(0);jQuery("dl.actionMenu dt.actionMenuHeader, dl.actionMenu dt.actionMenuHeader a").click(toggleMenuHandler).mouseover(actionMenuMouseOver)}jQuery(initializeMenus);