#!/bin/bash
export PERL5LIB=${munin-download:location}/opt/local/lib/perl5/site_perl
[ ! -e ${buildout:directory}/var/log/munin ] && mkdir ${buildout:directory}/var/log/munin
[ ! -e ${buildout:directory}/var/run ] && mkdir ${buildout:directory}/var/run
[ ! -e ${buildout:directory}/var/run/munin ] && mkdir ${buildout:directory}/var/run/munin
${munin-download:perl} -I${munin-download:location}/opt/local/lib/perl5/site_perl -wT ${munin-download:location}/sbin/munin-node
